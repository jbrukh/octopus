<div class="page-header">
  <h3>Settings</h3>
</div>

<form class="form-horizontal">
  <fieldset>
    <legend>Data Adapter</legend>
    <div class="control-group">
      <label class="control-label">Channels</label>
      <div class="controls">
        {{input value=model.adapters.live.url type=text}}
      </div>
    </div>
  </fieldset>

  <div class="form-actions">
    <button type="submit" class="btn btn-primary" {{action save}}>Save changes</button>
    <button class="btn" {{action reset}}>Reset</button>
  </div>
</form>