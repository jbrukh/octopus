<div class="modal-header">
  <button type="button" class="close" aria-hidden="true" {{action close target="view"}}>&times;</button>
  <h4 class="modal-title">Edit Recording</h4>
</div>

<div class="modal-body">
  <div class="form-group">
    <label for="newName">Name</label>
    {{input value=newName type=text class='form-control'}}
  </div>

  <div class="form-group">
    <label for="newDescription">Description</label>
    {{view Ember.TextArea valueBinding=newDescription class="form-control" rows="5"}}
  </div>
</div>

<div class="modal-footer">
  <a href="#" class="btn btn-default" {{action close target="view"}}>Close</a>
  <a href="#" class="btn btn-primary" {{action save}}>Save changes</a>
</div>
