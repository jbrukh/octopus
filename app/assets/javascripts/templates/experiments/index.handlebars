<div class="page-header">
  <div class="pull-right">
    {{#unless dataAdapter.isRunning}}
      <a {{action start}} class="btn btn-success">Start</a>
    {{else}}
      {{#unless dataAdapter.isRecording}}
        <a {{action record}} class="btn btn-danger">
          <i class="icon-download-alt"></i> Record
        </a>
      {{/unless}}
      <a {{action stop}} class="btn btn-warning">Stop</a>
    {{/unless}}
  </div>
  <h2>
    Experiments

    {{#if dataAdapter.isRunning}}
      <small>
        Reading {{dataAdapter.channels}} channels @
        resolution of {{dataAdapter.resolution}}ms {{pointsDrawn}}
      </small>
    {{/if}}
  </h2>
</div>

{{dataAdapter.manager.currentState.name}}

{{view App.DataAdapterGraphView dataAdapterBinding=dataAdapter}}