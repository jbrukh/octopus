<div class="row">
  <div class="col-lg-10">
    <ul class="nav nav-tabs">
    <li class="active">
      <a href="#"><i class="icon-cloud"></i>&nbsp;Cloud</a>
    </li>
    <li>
      <a href="#">Local</a>
    </li>
  </ul>

  </div>

  <div class="col-lg-2">
    {{#if canRecord}}
      {{#linkTo 'recordings.new' class='btn btn-success'}}New Recording{{/linkTo}}
    {{else}}
      <button id="cant-record" class="btn" disabled="disabled" title="You cannot record, unless the collector is running.">
        <i class="icon-ban-circle"></i>&nbsp;New Recording
      </button>
    {{/if}}
  </div>
</div>

<hr/>

{{#unless controller.length}}
  <div class="alert alert-info">
    There are no recordings.
  </div>
{{else}}
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Created At</th>
        <th>Owner</th>
        <th>Name</th>
        <th>Duration</th>
        <th>Participant</th>
        <th>State</th>
      </tr>
    </thead>
    <tbody>
      {{#each controller}}
        <tr>
          <td>
            <small>{{timeSince createdAt}}</small>
          </td>
          <td>{{owner}}</td>
          <td>{{name}}</td>
          <td>{{durationMs}}ms</td>
          <td>
            {{#if participant}}
              {{#linkTo 'participant' participant}}
                <span class="label label-info">
                  <i class="icon-user"></i> {{participant.fullName}}
                </span>
              {{/linkTo}}
            {{/if}}
          </td>
          <td>
            {{#if isUploading}}
              <div class="upload-progress progress progress-striped active">
                <div class="bar bar-success" style="width: 100%">
                  <i class="icon-upload"></i> uploading
                </div>
              </div>
            {{else}}
              <span class="label label-info">{{state}}</span>
            {{/if}}
          </td>
          <td>
            <div class="pull-right">
              {{#unless isUploading}}
                {{#linkTo 'recording' this class='btn btn-mini btn-success'}}Explore{{/linkTo}}
              {{/unless}}
              <a href="#" class="btn btn-mini btn-danger" {{action destroy this}}>Delete</a>
            </div>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{/unless}}