<table class="table table-striped table-hover table-list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Created At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each controller}}
      {{#linkTo 'participant' this tagName='tr' class='clickable'}}
        <td><i class="icon-user"></i>&nbsp;{{fullName}}</td>
        <td>{{email}}</td>
        <td>{{timeSince createdAt}}</td>
        <td>
          <div class="pull-right">
            <button class="btn btn-table btn-info" {{action select this bubbles=false}}>Select</button>
            <a href="#" class="btn btn-table btn-danger" {{action destroyParticipant this bubbles=false}}>Delete</a>
          </div>
        </td>
      {{/linkTo}}
    {{/each}}
  </tbody>
</table>