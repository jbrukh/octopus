<div class="page-header">
  <h3>New Participant</h3>
</div>

<form class="form-horizontal">
  <fieldset>
    <legend>Basic Info</legend>

    <div class="control-group">
      <label class="control-label">First Name</label>
      <div class="controls">
        {{input value=model.firstName type=text}}
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Last Name</label>
      <div class="controls">
        {{input value=model.lastName type=text}}
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Email</label>
      <div class="controls">
        {{input value=model.email type=text}}
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Gender</label>
      <div class="controls">
        {{view Ember.Select
          valueBinding=model.gender
          contentBinding="App.Participant.genders"
          optionValuePath="content.id"
          optionLabelPath="content.gender"
        }}
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Birthday</label>
      <div class="controls">
        {{view App.DatePicker valueBinding=model.birthday}}
      </div>
    </div>
  </fieldset>

  <div class="form-actions">
    <button type="submit" class="btn btn-primary" {{action save}}>Create Participant</button>
  </div>
</form>