<div class="page-header">
  <ul class="breadcrumb">
    <li>{{#linkTo 'participants.index'}}Participants{{/linkTo}} <span class="divider">/</span></li>
    <li class="active">Add Participant</li>
  </ul>
</div>

{{#unless model.isValid}}
  <div class="alert alert-error">
    Record is invalid.
    {{errors}}
  </div>
{{/unless}}

<form class="form-horizontal">
  <fieldset>
    <legend>Basic Info</legend>

    <div class="control-group">
      <label class="control-label">First Name</label>
      <div class="controls">
        {{input value=model.firstName type=text}}
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Last Name</label>
      <div class="controls">
        {{input value=model.lastName type=text}}
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Email</label>
      <div class="controls">
        {{input value=model.email type=text}}
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Gender</label>
      <div class="controls">
        {{view Ember.Select
          valueBinding=model.gender
          contentBinding="App.Participant.genders"
          optionValuePath="content.id"
          optionLabelPath="content.gender"
        }}
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Birthday</label>
      <div class="controls">
        {{view App.DatePicker valueBinding=model.birthday}}
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Extra Detail</legend>

    {{#each model.properties}}
      <div class="control-group">
        <label class="control-label">{{name}}</label>
        <div class="controls">
          <div class="input-append">
            {{input value=value type=text}}
            <span class="add-on">
              <i class="icon-trash clickable" {{action removeProperty this}}></i>
            </span>
          </div>
        </div>
      </div>
    {{/each}}

    <div class="control-group">
      <label class="control-label"></label>
      <div class="controls">
        {{input value=propertyName type=text}}
        <a href="#" class="btn btn-info" {{bindAttr class="isValidProperty::disabled"}} {{action addProperty}}>
          <i class="icon-plus"></i> Add Field
        </a>
      </div>
    </div>
  </fieldset>

  <div class="form-actions">
    <button type="submit" class="btn btn-primary" {{action save}}>Create Participant</button>
  </div>
</form>