<div class="row">
  <div class="col-md-offset-10 col-md-2">
    {{#linkTo 'videos.new' class="btn btn-success"}}
      <i class="icon-upload"></i> Upload Video
    {{/linkTo}}
  </div>
</div>

<hr/>

{{#unless content.isLoaded}}
  <div class="alert alert-info">
    Loading videos, please wait...
  </div>
{{else}}
  {{#unless controller.length}}
    <div class="alert alert-info">
      There are currently no videos, would you like to
      {{#linkTo 'videos.new'}}add one now{{/linkTo}}?
    </div>
  {{else}}
    <table class="table table-striped table-hover table-list">
      <thead>
        <tr>
          <td>Name</td>
          <td>Owner</td>
          <td>Created At</td>
        </tr>
      </thead>
      <tbody>
        {{#each controller}}
          {{#linkTo 'video' this tagName='tr' class='clickable'}}
            <td>{{name}}</td>
            <td>{{owner}}</td>
            <td>{{timeSince createdAt}}</td>
            <td>
              <div class="pull-right">
                <a href="#" class="btn btn-table btn-danger" {{action destroy this bubbles=false}}>
                  <i class="icon-trash"></i>
                </a>
              </div>
            </td>
          {{/linkTo}}
        {{/each}}
      </tbody>
    </table>
  {{/unless}}
{{/unless}}