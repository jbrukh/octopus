<div class="hero-unit">
  <p>
    <% if user_signed_in? && current_user.role == 'admin' %>
      <%= link_to 'Launch Octopus', octopus_index_url, class: 'btn btn-primary btn-large' %>
    <% else %>
      <i class="icon-rocket"></i> Coming soon...
    <% end %>
  </p>
</div>

<h3>Features</h3>

<div class="row">
  <div class="span6">
    <%= render :partial => 'feature', :locals => {
      :title => 'Cloud Storage',
      :icon => 'icon-cloud',
      :description => "Don't worry about storing and cataloguing your recordings, we'll
        do that for you."
      } %>
  </div>

  <div class="span6">
    <%= render :partial => 'feature', :locals => {
      :title => 'Formats you use',
      :icon => 'icon-cloud-download',
      :description => "Need your data in csv? No problem. We support a variety of
        download formats so you can continue to use the tools you already
        use."
      } %>
  </div>
</div>

<hr/>

