<!DOCTYPE html>
<html>
  <head>
    <title>Octopus</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>

    <%= csrf_meta_tags %>

    <link rel="shortcut icon" href="/assets/favicon.png" />
  </head>
  <body>

    <div class="navbar navbar-static-top navbar-inverse">
      <div class="navbar-inner">
        <%= link_to 'Octopus', root_url, class: 'brand' %>
        <ul class="nav">
          <% if user_signed_in? %>
            <li><%= link_to 'sign out', destroy_user_session_url(), :method => :delete  %></li>
          <% else %>
            <li><%= link_to 'sign up', new_user_registration_url  %></li>
            <li><%= link_to 'sign in', new_user_session_url  %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="container">
      <% if flash[:notice] %>
        <div class="flash alert alert-notice">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="flash alert alert-error">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>